{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "0.2.4b",
    "author": "zacky48",
    "homepage_url": "https://github.com/zacky48/check-before-sending-email",
    "default_locale": "en",
    "browser_specific_settings": {
        "gecko": {
            "id": "check-before-sending-email@apar.jp",
            "strict_min_version": "115.0"
        }
    },
    "icons": {
        "64": "images/icon-64px.png",
        "32": "images/icon-32px.png",
        "16": "images/icon-16px.png"
    },  
    "background": {
        "page": "src/background.html"
    },
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "permissions": [
        "compose",
        "compose.send",
        "storage",
        "addressBooks"
    ]
}